# OpenVPN Traffic Monitor Configuration
# ===========================================

# Management Interface Settings
OPENVPN_MANAGEMENT_HOST=127.0.0.1
OPENVPN_MANAGEMENT_PORT=7505

# Monitor Service Settings  
MONITOR_INTERVAL=45
MAX_LOG_SIZE=10485760

# Core Path Configuration
PROJECT_ROOT=/root/openvpn

# Database Paths
DATABASE_FILE=/root/openvpn/openvpn_data/vpn_manager.db
DATABASE_DIR=/root/openvpn/openvpn_data

# Log Paths
OPENVPN_LOG_FILE=/var/log/openvpn/traffic_monitor.log
VAR_LOG_OPENVPN=/var/log/openvpn
LOG_DIR=/var/log/openvpn

# OpenVPN Configuration Paths
OPENVPN_CONFIG_DIR=/etc/openvpn
OPENVPN_SERVER_DIR=/etc/openvpn/server
OPENVPN_CCD_DIR=/etc/openvpn/ccd

# Certificate and Key Paths
CA_CERT=/etc/openvpn/ca.crt
SERVER_CERT=/etc/openvpn/server-cert.crt
SERVER_KEY=/etc/openvpn/server-cert.key
CRL_FILE=/etc/openvpn/crl.pem
TLS_CRYPT_KEY=/etc/openvpn/tls-crypt.key

# EasyRSA Paths
EASYRSA_DIR=/etc/openvpn/easy-rsa
PKI_DIR=/etc/openvpn/easy-rsa/pki

# Runtime Paths
VAR_RUN_OPENVPN=/var/run/openvpn
STATUS_FILE=/var/log/openvpn/openvpn-status.log

# Script Paths
SCRIPTS_DIR=/root/openvpn/scripts
ON_CONNECT_SCRIPT=/root/openvpn/scripts/on_connect.py
ON_DISCONNECT_SCRIPT=/root/openvpn/scripts/on_disconnect.py

# Performance Settings
# CHECK_INTERVAL must be between 30-60 seconds for optimal performance
# MAX_LOG_SIZE is in bytes (default: 10MB)
